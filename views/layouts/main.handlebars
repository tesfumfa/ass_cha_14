<body>
  <header>
    <div class="jumbotron jumbotron alert-dark">
  <div class="container">
    <h1 class="display-2">Tech Blogger</h1>
  </div>
 </header>

    <!-- Only display the logout button if the user is logged in -->
    {{#if logged_in}}
    <div class="container-fluid">
      <button class="btn btn-primary display-5" id="logout">Logout</button>
    </div>
    {{/if}}
 
  <main class="container container-fluid mt-5">
    {{{ body }}}
  </main>
  <footer>
      
  </footer>

  <!-- Only include the logout script if the user is logged in -->
  {{#if logged_in}}
  <script src="./public/javascript/logout.js"></script>
